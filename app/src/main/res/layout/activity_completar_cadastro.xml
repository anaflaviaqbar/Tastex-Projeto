<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CompletarCadastroActivity"
    android:background="@layout/gradient_background2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNomeCompCad"
            android:hint="Nome completo"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtEndereçoCompCad"
            android:hint="Endereço"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtEmailCompCad"
            android:hint="E-mail"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtDataNascCompCad"
            android:hint="Data nascimento"/>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sexoCompCad"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feminino"
                android:id="@+id/rbFemininoCompCad"
                android:onClick="checaSexo"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"
                android:id="@+id/rbMasculinoCompCad"
                android:onClick="checaSexo"/>

        </RadioGroup>


    </LinearLayout>


    <Button
        android:id="@+id/btnGravarCompCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar cadastro"
        android:background="#FFFFFF"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>