<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ComprarPratoActivity"
    android:background="@layout/gradient_background2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:clipToPadding="true"
            app:cardCornerRadius="45dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imgPratoComprarPrato"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_above="@id/progressBar"
            android:layout_below="@id/linearLayout"
            />

        <TextView
            android:id="@+id/txtNomePratoComprarPrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            tools:text="Nome do Prato" />

        <TextView
            android:id="@+id/txtDescricaoPratoComprarPrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textStyle="italic"
            tools:text="Descrição detalhada do prato" />

        <TextView
            android:id="@+id/txtPrecoPratoComprarPrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="12.2 R$"
            android:textSize="24dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"/>


    </LinearLayout>



    <Button
        android:id="@+id/btnComprarPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Finalizar Pedido"
        android:textSize="24dp"/>



</RelativeLayout>